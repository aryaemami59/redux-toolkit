{
  // For building the library.
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "src/**/*.test-d.ts*",
    "src/**/*.spec-d.ts*",
    "src/**/*.test.ts*",
    "src/**/*.spec.ts*",
    "src/**/tests/*"
  ],
  "include": ["src"]
}
